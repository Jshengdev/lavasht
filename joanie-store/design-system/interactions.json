{
  "transitions": {
    "fast": {
      "duration": "150ms",
      "easing": "ease-out"
    },
    "normal": {
      "duration": "300ms",
      "easing": "ease-out"
    },
    "spring": {
      "duration": "300ms",
      "easing": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    }
  },
  "buttonInteractions": {
    "hover": {
      "scale": 1.02,
      "shadow": "add subtle shadow",
      "duration": "150ms"
    },
    "active": {
      "scale": 0.98
    }
  },
  "tabSwitchAnimation": {
    "type": "layout-animation",
    "layoutId": "activeTabBg",
    "spring": {
      "stiffness": 500,
      "damping": 30
    },
    "description": "Active tab background slides between tabs"
  },
  "tabHoverAnimation": {
    "trigger": "WHAT'S TRENDING inactive tab",
    "change": {
      "borderColor": "#77794E → #9FA16D",
      "textColor": "#77794E → #9FA16D"
    },
    "type": "smart-animate",
    "easing": "ease-in-out-back",
    "duration": "300ms"
  },
  "heartIconAnimation": {
    "onFill": {
      "scale": [1, 1.4, 1],
      "duration": "0.3s",
      "phases": "0.15s per phase"
    },
    "particleBurst": {
      "count": 8,
      "animation": "explode outward",
      "duration": "0.5s"
    }
  },
  "productCardHover": {
    "addToCartButton": {
      "initial": {
        "translateY": "100%",
        "opacity": 0
      },
      "hover": {
        "translateY": "0",
        "opacity": 1
      },
      "duration": "0.3s",
      "easing": "ease-out"
    }
  },
  "cartIconBounce": {
    "trigger": "item added to cart",
    "animation": {
      "scale": [1, 1.3, 1],
      "duration": "0.3s"
    },
    "badgePop": {
      "scale": [0, 1],
      "duration": "0.3s",
      "easing": "back-out"
    }
  },
  "pageLoadSequence": [
    {
      "element": "promoBanner",
      "animation": "fadeIn",
      "duration": 400,
      "delay": 0
    },
    {
      "element": "header",
      "animation": "slideDown",
      "duration": 500,
      "delay": 200,
      "overlap": "-0.2s"
    },
    {
      "element": "hero",
      "animation": "fadeInUp",
      "duration": 600,
      "delay": 400,
      "overlap": "-0.3s"
    },
    {
      "element": "tabs",
      "animation": "slideFromLeft",
      "duration": 400,
      "delay": 600,
      "overlap": "-0.2s"
    },
    {
      "element": "products",
      "animation": "staggerFadeInUp",
      "duration": 500,
      "stagger": 100,
      "delay": 800
    }
  ],
  "scrollAnimations": {
    "valueProps": {
      "trigger": "top 80%",
      "animation": "fadeInUp",
      "stagger": 150
    },
    "footer": {
      "trigger": "top 90%",
      "animation": "fadeIn"
    }
  },
  "heroShoeEffect": {
    "float": {
      "y": [0, -10, 0],
      "duration": "3s",
      "repeat": "infinity",
      "easing": "ease-in-out"
    },
    "parallax": {
      "intensity": 0.05,
      "smoothing": {
        "damping": 25,
        "stiffness": 150
      }
    }
  },
  "totalPageLoadDuration": "~1.5s"
}
