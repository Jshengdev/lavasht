{
  "colors": {
    "promo-banner": "#4A4C6C",
    "page-bg": "#F4F4F4",
    "footer-bg": "#333333",
    "card-bg": "#FFFFFF",
    "btn-dark": "#333333",
    "btn-accent": "#77794E",
    "btn-accent-hover": "#9FA16D",
    "btn-border-light": "#F4F4F4",
    "sale-red": "#DB4444",
    "wishlist-red": "#DB4444",
    "star-yellow": "#FFAD33",
    "star-empty": "#E0E0E0",
    "text-primary": "#333333",
    "text-secondary": "#7F7F7F"
  },
  "fontFamily": {
    "sans": ["Inter", "system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif"]
  },
  "width": {
    "page": "1440px",
    "content": "1370px",
    "hero": "1090px",
    "product-section": "1279px",
    "card": "270px"
  },
  "height": {
    "promo": "41px",
    "header": "70px",
    "hero": "578px",
    "card": "350px",
    "footer": "451px"
  },
  "spacing": {
    "section": "112px",
    "hero-gap": "166px",
    "footer-gap": "43px"
  },
  "borderRadius": {
    "btn": "5px",
    "card": "4px",
    "badge": "4px",
    "pill": "100px"
  },
  "boxShadow": {
    "header": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
    "card": "0 2px 8px rgba(0, 0, 0, 0.08)",
    "card-hover": "0 4px 12px rgba(0, 0, 0, 0.15)"
  },
  "animation": {
    "heart-pop": "heartPop 0.3s ease-out",
    "slide-up": "slideUp 0.3s ease-out"
  },
  "keyframes": {
    "heartPop": {
      "0%, 100%": { "transform": "scale(1)" },
      "50%": { "transform": "scale(1.4)" }
    },
    "slideUp": {
      "0%": { "transform": "translateY(100%)", "opacity": "0" },
      "100%": { "transform": "translateY(0)", "opacity": "1" }
    }
  }
}
